<%= form_for @request do |f| %>
  <%= render "shared/form_errors", object: f.object %>
  <div class="form-group">
    <%= f.text_field :book_title, class: "form-control",
      placeholder: t("requests.general.book_title") %>
  </div>
  <div class="form-group">
    <%= f.text_field :author, class: "form-control",
      placeholder: t("requests.general.author") %>
  </div>
  <div class="form-group">
    <%= f.submit t("application.buttons.send"), class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
