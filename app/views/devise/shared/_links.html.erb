<% unless controller_name == "sessions" %>
  <%= link_to t("devise.general.log_in_message"), new_session_path(resource_name) %><br />
<% end %>

<% if devise_mapping.registerable? && controller_name != "registrations" %>
  <%= link_to t("devise.general.sign_up_message"), new_registration_path(resource_name) %><br />
<% end %>

<% if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
  <%= link_to t("devise.general.forgot_password"), new_password_path(resource_name) %><br />
<% end %>
