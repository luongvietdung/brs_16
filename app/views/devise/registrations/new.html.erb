<div class="wrapper">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
    html: {class: "form-signin"}) do |f| %>
    <h3 class="form-signin-heading"><%= t "devise.registers.new.title" %></h3>
    <%= render "shared/form_errors", object: f.object %>

    <div class="form-group">
      <%= f.text_field :name, autofocus: true,
        placeholder: t("devise.registers.new.name"), class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true,
        placeholder: t("devise.sessions.new.email"), class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password,
        placeholder: t("devise.sessions.new.password"), autocomplete: "off",
        class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation,
        placeholder: t("devise.registers.new.confirm_password"), autocomplete: "off",
        class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit t("devise.registers.new.sign_up"), class: "btn btn-lg btn-primary btn-block" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
