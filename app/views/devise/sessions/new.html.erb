<div class="wrapper">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),
    html: {class: "form-signin"}) do |f| %>
    <h3 class="form-signin-heading"><%= t "devise.sessions.new.title" %></h3>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true,
        placeholder: t("devise.sessions.new.email"), class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password,
        placeholder: t("devise.sessions.new.password"), autocomplete: "off",
        class: "form-control" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label t("devise.sessions.new.remember_me") %>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.submit t("devise.sessions.new.sign_in"),
        class: "btn btn-lg btn-primary btn-block" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
