<%= form_for [:admin, @book], html: {multipart: true} do |f| %>
  <%= render "shared/form_errors", object: @book %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :published_date %>
    <%= f.text_field :published_date, class: "form-control", id: "datepicker" %>
  </div>
  <div class="form-group">
    <%= f.label :number_of_page %>
    <%= f.number_field :number_of_page, class: "form-control", min: 1, max: 65000 %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.bootsy_area :description, class: "form-control", rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :category %>
    <%= collection_select :book, :category_id, Category.all, :id, :name,
      prompt: true, class: "form-control" %>
  </div>
  <div class="form-group image-container">
    <%= f.label :image %>
    <%= f.file_field :image %>
    <div class="preview pull-right">
      <%= image_tag @book.image.thumb.url, class: "img-responsive",
        id: "preview_cover" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit t("application.buttons.save"), class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
