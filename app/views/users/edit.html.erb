<div class="row">
  <div class="col-md-12 block profile">
    <div class="col-md-3">
      <div id="leftPanel">
        <%= render "left_panel" %>
      </div>
    </div>
    <div class="col-md-9">
      <div id="rightPanel">
        <%= form_for @user, html: {class: "form-horizontal", multipart: true} do |f| %>
          <%= render "shared/form_errors", object: f.object %>
          <div class="form-group">
            <%= f.label :name, class: "control-label col-sm-2" %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: "form-control"%>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :avatar, class: "control-label col-sm-2" %>
            <div class="col-sm-10">
              <%= f.file_field :avatar %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit t("application.buttons.save"), class: "btn btn-primary btn-lg"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
