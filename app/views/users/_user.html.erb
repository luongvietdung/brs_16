<div class="row">
  <div class="col-md-12">
    <div class="col-md-3">
      <%= image_tag user.avatar.thumb.url, class: "img-thumbnail img-responsive" %>
    </div>
    <div class="col-md-9">
      <h3><%= link_to user.name, user_path(user) %></h3>
      <div id="relationship_<%= user.id %>">
        <%= render "relationship_form", user: user %>
      </div>
    </div>
  </div>
</div>
<hr/>

